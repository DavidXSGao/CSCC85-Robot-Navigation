task main() {
    string color_str; //string to display color on monitor for debugging
    string ne = "unknown";
    string nw = "unknown";
    string se = "unknown";
    string sw = "unknown";
    bool red = false;
    bool yellow = false;

    SetSensorColorFull(IN_1); //turn rbg sensor on

    while (true) {

        if (Sensor(IN_1) == 1){ // check if rgb sensor read "black"
           color_str = "Black";
           PlaySound(SOUND_UP);
           if (red){
              OnRev(OUT_AC, 30);
           }
           if (yellow){

           }
           if (yellow == false && red == false){
               until (Sensor(IN_1) != 1) {
                    OnFwd(OUT_AC, 30); // move forward with an output power of 30
               }
           }
	         Off(OUT_AC); // stop motors to read the next color

        }
        
        else if (Sensor(IN_1) == 2){ //check if rgb sensor read "blue"
           color_str = "Blue";
           PlaySound(SOUND_CLICK);
           while (Sensor(IN_1) != 1) {
               OnRev(OUT_A, 30);
           }
           Off(OUT_AC);
        }
        
        else if (Sensor(IN_1) == 3){ //check if rgb sensor read "blue"
           color_str = "Green";
           PlaySound(SOUND_DOUBLE_BEEP);
           while (Sensor(IN_1) != 1) {
               OnRev(OUT_A, 30);
           }
           Off(OUT_AC);
        }

        else if (Sensor(IN_1) == 4){ //check if rgb sensor read "yellow"
           color_str = "Yellow";
           PlaySound(SOUND_DOWN);
           red = false;
           OnRev(OUT_AC, 30);
           Wait(1000);
           //yellow = true;
           Off(OUT_AC);
        }
        
        else if (Sensor(IN_1) == 5){ // check if rgb sensor read "red"
           color_str = "Red";
           PlaySound(SOUND_LOW_BEEP);
           /*while (Sensor(IN_1) != 1) {
               OnFwd(OUT_C, 30);
               OnRev(OUT_A, 30);
           }*/
           OnRev(OUT_AC, 30);
           Wait(1000);
           red = true;
           Off(OUT_AC);
        }
        
        else if (Sensor(IN_1) == 6){ //check if rgb sensor read "white"
           color_str = "White";
           PlaySound(SOUND_FAST_UP);
           while (Sensor(IN_1) != 1) {
               OnRev(OUT_A, 30);
           }
           Off(OUT_AC);
        }

        TextOut(0, 10, "NE: " + ne);
        TextOut(0, 20, "NW: " + nw);
        TextOut(0, 30, "SE: " + se);
        TextOut(0, 40, "SW: " + sw);
        TextOut(0, 0, color_str); // display current color on the monitor
    }
}
